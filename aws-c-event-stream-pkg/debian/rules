#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
export DH_VERBOSE = 1


export DEB_CXXFLAGS_MAINT_APPEND  = -std=c++17 -stdlib=libc++
export CC=clang-9
export CXX=clang++-9

%:
	dh $@ --sourcedirectory=aws-c-event-stream

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_INSTALL_PREFIX=/opt/aws-sdk-cpp -DCMAKE_PREFIX_PATH=/opt/aws-sdk-cpp -DBUILD_SHARED_LIBS=ON -DCMAKE_INSTALL_RPATH='$$ORIGIN'
